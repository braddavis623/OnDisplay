<p>
  <h3><strong>Project:</strong></h3>
  <h2><%= @project.name %></h2>
</p>
 
<h4>Discussion section:</h4>
<% @project.comments.each do |comment| %>
  <p>
    <strong></strong>
    <%= comment.commenter %> Says:
  </p>
 
  <p>
    <strong>-></strong>
    <%= comment.body %>
  </p>
<% end %>
 
<h5>Add a comment:</h5>
<%= form_for([@project, @project.comments.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'save', class: "btn btn-success" %>
  </p>
<% end %>
 
<%= link_to 'home', root_url, class: "btn btn-default" %> |
<%= link_to 'Back', projects_path, class: "btn btn-default" %>