<p id="notice"><%= notice %></p>

<h1>Forum postings</h1>

<table class = "table table-bordered table-striped">
  <thead>
    <tr>
      <th>name</th>
      <th> category</th>
      <th> contents</th>
      <th colspan="3">action</th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.filename %></td>
        <td><%= document.content_type %></td>
        <td><%= document.file_contents %></td>
        <td><%= link_to 'Show', document, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_document_path(document), class: "btn btn-primary" %></td>
        <td><%= button_to "Delete",  document, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{document.filename}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_document_path, class: "btn btn-primary" %> | 
